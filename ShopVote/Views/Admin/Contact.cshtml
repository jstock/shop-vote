@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
    <h1 class="page-header">@ViewBag.Title</h1>
    <p>Update information on the Contact Page.</p>
    <br />
    <form class="form-horizontal" role="form">
        <div class="form-group">
            <label class="control-label col-sm-2" for="">Phone Main:</label>
            <div class="col-sm-6">
                <input type="" class="form-control" id="" placeholder="Enter main phone number">
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="">Phone After Hours:</label>
            <div class="col-sm-6">
                <input type="" class="form-control" id="" placeholder="Enter after hours phone number">
            </div>
        </div>
                <div class="form-group">
            <label class="control-label col-sm-2" for="">Support Email:</label>
            <div class="col-sm-6">
                <input type="" class="form-control" id="" placeholder="Enter support email">
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="">Marketing Email:</label>
            <div class="col-sm-6">
                <input type="" class="form-control" id="" placeholder="Enter marketing email">
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="">General Email:</label>
            <div class="col-sm-6">
                <input type="" class="form-control" id="" placeholder="Enter General Email">
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="">Address:</label>
            <div class="col-sm-6">
                <input type="" class="form-control" id="" placeholder="Enter address">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-2">
                <button type="submit" class="btn btn-primary">Update</button>
            </div>
            <div class=" col-sm-2">
                <button type="submit" class="btn btn-default">Cancel</button>
            </div>
        </div>
    </form>
</div>
